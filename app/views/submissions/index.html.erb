<div class="page-header">
  <h1>
    Submissions
    <a href="/submissions/new" class="btn btn-lg btn-success">New Submission</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Question</th>
        <th>User</th>
        <th>Selection</th>
        <th>Actions</th>
      </tr>

      <% @submissions.each do |submission| %>
      <tr>
        <td>
          <% if submission.question.present? %>
            <a href="/questions/<%= submission.question.id %>">
              <%= submission.question.text %>
            </a>
          <% end %>
        </td>
        <td>
          <% if submission.user.present? %>
            <a href="/users/<%= submission.user.id %>">
              <%= submission.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= submission.selection %></td>
        <td>
          <a href="/submissions/<%= submission.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == submission.user %>
            <a href="/submissions/<%= submission.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_submission/<%= submission.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @submissions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
